{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "GroupId": "sms-sender",
    "Topic": "notifications.sms",
    "MaxParallel": 8,
    "EnableAutoCommit": true,
    "AutoOffsetReset": "Earliest"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Port=5432;Database=myapp;Username=postgres;Password=password"
  },
  "SmsSettings": {
    "Provider": "Mock",
    "UseMock": true,
    "Twilio": {
      "AccountSid": "",
      "AuthToken": "",
      "FromNumber": ""
    },
    "AwsSns": {
      "Region": "eu-west-1",
      "AccessKeyId": "",
      "SecretAccessKey": "",
      "SenderId": ""
    }
  }
}
