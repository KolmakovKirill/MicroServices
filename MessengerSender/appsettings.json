{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "GroupId": "messenger-sender",
    "Topic": "notifications.messenger",
    "MaxParallel": 8,
    "EnableAutoCommit": true,
    "AutoOffsetReset": "Earliest"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Port=5432;Database=myapp;Username=postgres;Password=password"
  },
  "MessengerSettings": {
    "Provider": "Mock" // "Telegram", "Whatsapp", or "Mock"
  }
}
